<article class="post">
    <div class="title">
        {{title}}
        {{!-- <span>({{format_url post_url}})</span> --}}
        {{!-- {{post_content}} --}}
    </div>
    <div class="post-text">{{post_content}}</div>
    <div class="meta">
        Posted by {{user.username}} on
        {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>